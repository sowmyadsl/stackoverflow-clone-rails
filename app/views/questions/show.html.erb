<h1>Show Question</h1>

<div class="row">
  <div class="col-md-6">
    <h1><%= @question.title %></h1>
    <h2><%= @question.content %>$</h2>
    <h3><%= @question.tags%></h3>
  </div>


<p><%= link_to "Edit", edit_question_path(@question) %></p>
<p><%= link_to "Delete", question_path(@question),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
<p><%= link_to "Return to questions", questions_path %></p>
